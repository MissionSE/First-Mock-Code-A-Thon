<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/ref_manual_title_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/big_card"
        android:orientation="vertical" >
       <TextView
           android:id="@+id/ref_manual_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textAppearance="@style/Header2"
           android:text="Reference Manuals" />
    </LinearLayout>
    
    <ListView
        android:id="@+id/ref_manual_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:entries="@array/reference_manuals" >
    </ListView>

</LinearLayout>
